@model Store.UI.Models.CategoryListViewModel
@{
    Layout = null;
    ViewBag.Title = "Index";
    var sn = 1;
}

<h2>Categories</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-list"></span>  @Html.ActionLink("Add Category", "AddCategory", null, new { @class = "btn btn-success btn-sm pull-right linker" })
    </div>
    <div class="panel-body">
        <table class="table table-striped rbody">
            <tr>
                <th>S/N</th>          
                <th>Name</th>
                <th>Description</th>           
                <th></th>
                <th></th>
            </tr>
            
            

            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@sn</td>
                   
                    <td style="width: 300px;">@category.Name</td>
                    <td style="width: 200px;">@category.Description</td>
                
                    @*<td>@Html.ActionLink("Edit","EditCategory", new {  category.Id })</td>*@
                    <td><a href="/Admin/EditCategory/@category.Id" class="linker">Edit</a></td>
                    <td>
                            @using (Html.BeginForm("DeleteCategory", "Admin"))
                            {
                                @Html.Hidden("Id", category.Id)
                                <input type="submit" class="btn btn-danger btn-xs" value="Delete"/>
                            }

                    </td>
                </tr>


                                    sn++;
                            }
        </table>
    </div>
    <div class="panel-footer">
        
    </div>

</div>
