@model Store.Domain.Cloth

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="card detail-view">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img src="@Url.Content("~/Content/Images/")@Model.ImageUrl" /></div>
                        <div class="tab-pane" id="pic-2"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></div>
                        <div class="tab-pane" id="pic-3"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></div>
                        <div class="tab-pane" id="pic-4"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></div>
                        <div class="tab-pane" id="pic-5"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img src="@Url.Content("~/Content/Images/")@Model.ImageThumbnailUrl" /></a></li>
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Name</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                        </div>
                        <span class="review-no">41 reviews</span>
                    </div>
                    <p class="product-description">@Html.Raw(Model.LongDescription)</p>
                    <h4 class="price">current price: <span>@Model.Price.ToString("C")</span></h4>
                    <p class="">We currently have @Model.InStock in stock.</p>
                    <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                    
                    <h5 class="sizes">
                        sizes:
                        <span class="size" data-toggle="tooltip" title="small">s</span>
                        <span class="size" data-toggle="tooltip" title="medium">m</span>
                        <span class="size" data-toggle="tooltip" title="large">l</span>
                        <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                    </h5>
                    <h5 class="colors">
                        colors:
                        <span class="color orange glyphicon glyphicon-remove text-center" style="line-height:1.7em; color:white;" data-toggle="tooltip" title="Not In store"></span>
                        <span class="color green"></span>
                        <span class="color blue"></span>
                    </h5>
                    <div class="action">
                        <button class="add-to-cart btn btn-default" id="@Model.Id" type="button">add to cart</button>
                        <button class="like btn btn-default" type="button"><span class="glyphicon glyphicon-heart"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section script2{

    <script type="text/javascript">
        $(document).ready(
            function () {

                

                $(".add-to-cart").click(function (e) {
                    var id = this.id;

                    $.ajax({
                        type: 'POST',
                        url: '/ShoppingCart/AddToCart',
                        data: {
                            returnUrl: $('#returnUrl').val(),
                            ClothId: id
                        },
                        success: function (data) {

                            $('#summary_view').html(data);
                        }
                    });
                });


            });

    </script>


}